<section class="container-view">
  <div>
    <h1 class="title">{{chapter.Description}}</h1>
    <h2 class="title">{{topic.id}}.{{topic.Description}}</h2>
  </div>
</section>
{{#if topic.Industry_Issues}}
  <section class="container-topic-list">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Issues</th>
          <th>View</th>
        </tr>
      </thead>
      <tbody>
        {{#each topic.Industry_Issues}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.Description}}</td>
            <td><a href="/industryissue/{{this.id}}"><i
                  class="bi bi-search"
                ></i></a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </section>
{{else}}
<section class="container-view">
  <h6 class="title no-results">No Results</h6>
</section>
  
{{/if}}
<div class="container-form-view">
  <div class="table-mobile">
    {{#each topic.Industry_Issues}}
      <div class="table-mobile-item">
        <p><b>ID: </b>{{this.id}}</p>
        <p><b>Issues: </b>{{this.Description}}</p>
        <div class="actions">
          <p><a href="/industryissue/{{this.id}}"><i
                class="bi bi-search"
              ></i></a></p>
        </div>
      </div>
    {{/each}}
  </div>
</div>